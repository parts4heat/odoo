<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_exploded_view_form" model="ir.ui.view">
        <field name="name">exploded.view.form</field>
        <field name="model">exploded.view</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="binary"/>
                        <field name="file_name" invisible="1"/>
                        <field name="model_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_exploded_view_tree" model="ir.ui.view">
        <field name="name">exploded.view.tree</field>
        <field name="model">exploded.view</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="name"/>
                        <field name="binary" string="Size"/>
                        <field name="file_name"/>
                        <field name="model_id"/>
            </tree>
        </field>
    </record>

     <menuitem id="menu_masterdata_sources" name="Sources" parent="stock.menu_stock_inventory_control"
     groups="stock.group_stock_manager" sequence="200"/>

        <record id="action_exp_view" model="ir.actions.act_window">
            <field name="name">Exploded Views</field>
            <field name="res_model">exploded.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            action="action_exp_view"
            id="menu_exploded_view"
            parent="menu_masterdata_sources"
            sequence="10"/>

</odoo>

