<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_sale_alt_procurement" model="ir.ui.view">
            <field name="name">sale.order.form.alt.procure</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="before">
                    <field name="original_product_id" invisible="0"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                    <attribute name="string">To Fulfill</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="original_product_id" invisible="0"/>
                </xpath>
               <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="string">To Fulfill</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>

