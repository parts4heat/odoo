<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <act_window id="action_open_import_orders_wizard"
            name="Import Volusion Orders"
            src_model="sale.order"
            res_model="sale.order.import.wizard"
            target="new"
            view_mode="form"
            view_id="wizard_import_addtional_deliveries"
            multi="False"
            context="{}"/>

        <menuitem id="menu_import_orders"
                  name="Import"
                  action="action_open_import_orders_wizard"
                  parent="sale.sale_menu_root"
                  sequence="6"
                  groups="sales_team.group_sale_salesman"/>

        <record id="view_order_import_tree" model="ir.ui.view">
            <field name="name">sale.order.import.tree</field>
            <field name="model">sale.import</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Volusion Imports">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="sale_import_action_view_order_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_order_import_tree"/>
            <field name="act_window_id" ref="action_orders"/>
        </record>


    </data>
</odoo>
