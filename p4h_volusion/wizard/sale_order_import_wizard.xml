<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="wizard_import_addtional_deliveries">
            <field name="name">Import Volusion Orders</field>
            <field name="model">sale.order.import.wizard</field>
            <field name="priority">16</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Volusion Orders" create="true">
                    <sheet>
                        <div class="oe_button_box" name="button_box"></div>
                        <div colspan="2" class="oe_form_box_info">
                            <div class="alert alert-success" role="alert">
                              <h4 class="alert-heading" role="alert">Upload Orders to transfer to Odoo</h4>
                              <p>File must match pre-agreed format.</p>
                            </div>
                        </div>

                        <group>
                            <field name="file" filename="file_name" widget="file"/>
                            <field name="file_name" invisible="1"/>
                            <field name="reference" required="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Upload" type="object" name="action_import_orders" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
